<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="upload-file">
                <div class="row">
                    <div class="col-6">
                        <h2>Upload Files</h2>
                    </div>
                </div>
                <div class="upload-wrapper">
                    <label>
                        <input type="file" name="files[]" id="files" multiple accept="image/jpeg, image/png, image/gif,">
                        <p>Drop your files here. <br>or <a>Browse</a></p>
                    </label>
                </div>
            </div>
        </div>
        <div class="col-12">
            <br />
        </div>
        <div class="row">
            <div class="col m-lg-2">
                <input type="submit" class="btn btn-primary" value="Click to upload" onclick="fileUpload()" style="width: 500px;margin-left: 290px;" />
            </div>
        </div>
        <div class="col-12">
            <output id="image-gallery"></output>
        </div>
    </div>
</div>

